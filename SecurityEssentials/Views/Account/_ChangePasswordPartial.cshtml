@*@using Identity*@
@model SecurityEssentials.Model.ManageUser

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div>
        <div class="title"> Change Password Form   ( You're logged in as <strong>@User.Identity.Name</strong> )</div>
        <div>
            <div class="input-group">
                @Html.LabelFor(m => m.OldPassword, new { @class = "form-group" })
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            </div>
            <div class="input-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "form-group" })
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
            <div class="input-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-group" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            <div class="buttons">
                <input type="submit" value="Change password" class="btn btn-primary" />
            </div>
        </div>
    </div>    
}
